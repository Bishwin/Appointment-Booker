<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".HomeScreen">


    <CalendarView
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:id="@+id/calendarView"
        android:clickable="true"
        android:firstDayOfWeek="2"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/createApp"
        android:id="@+id/button5"
        android:layout_above="@+id/button3"
        android:layout_alignStart="@+id/button3" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/viewEditApp"
        android:id="@+id/button3"
        android:layout_above="@+id/button"
        android:layout_alignStart="@+id/button" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/searchApp"
        android:id="@+id/button"
        android:layout_marginStart="23dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/deleteApp"
        android:id="@+id/button6"
        android:layout_alignTop="@+id/button5"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/moveApp"
        android:id="@+id/button4"
        android:layout_alignBottom="@+id/button3"
        android:layout_alignStart="@+id/button2" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/translateApp"
        android:id="@+id/button2"
        android:layout_below="@+id/button3"
        android:layout_alignParentEnd="true" />






</RelativeLayout>
